pipeline{
    agent any
    stages{
        stage("start"){
            steps{
               retry(3){
                    echo " start "
                    sh 'date'
                    sh 'ping 8.8.8.8 -c 4'
                }
            }
        }
        post{
            success{
                sh 'success'
            }
        }
      
    }
    post{
        always{
            echo " notify the team"
        }
        success{
            echo "we got it "
        }
        failure{
            echo "docker rmi "
        }
    }
}
